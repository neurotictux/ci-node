{
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm test",
            "pre-push": "npm run lint && npm test"
        }
    },
    "scripts": {
        "start": "nodemon --watch src --exec ts-node src/index.ts",
        "build": "npm run lint && npm run tsc",
        "lint": "tslint ./src/**/*.ts",
        "precommit": "npm test",
        "prepush": "npm test"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "nodemon": "^1.19.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.1",
        "@types/node": "^12.7.5",
        "husky": "^3.0.5",
        "ts-node": "^8.4.1",
        "tslint": "^5.20.0",
        "typescript": "^3.6.3"
    }
}